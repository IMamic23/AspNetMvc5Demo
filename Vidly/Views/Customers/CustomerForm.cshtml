@model Vidly.ViewModels.CustomerFormViewModel
@{
    ViewBag.Title = "NewCustomer";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>New Customer</h2>

@using (Html.BeginForm("Save", "Customers"))
{
    <div class="form-group">
        @*@Html.LabelFor(m => m.Name)*@
        @Html.TextBoxFor(m => m.Customer.Name, new { @class="form-control", placeholder=@Html.DisplayNameFor(m => m.Customer.Name) })
    </div>
    <div class="form-group">
        @Html.TextBoxFor(m => m.Customer.BirthDate, "{0:d MMM yyyy}", new { @class = "form-control", placeholder = @Html.DisplayNameFor(m => m.Customer.BirthDate) })
    </div>
    <div class="form-group">
        @Html.DropDownListFor(m => m.Customer.MembershipTypeId, new SelectList(Model.MembershipTypes, "Id", "Name"), "Select Membership Type", new { @class = "form-control" })
    </div>
    <div class="form-check">
        <label class="form-check-label">
            @Html.CheckBoxFor(m => m.Customer.IsSubscribedToNewsletter) Subscribed to Newsletter
        </label>
    </div>
    @Html.HiddenFor(m => m.Customer.Id)
    <button type="submit" class="btn btn-primary">Save</button>
}

