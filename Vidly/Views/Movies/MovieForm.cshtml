@using System.Web.Mvc.Html5
@model Vidly.ViewModels.MovieFormViewModel
@{
    ViewBag.Title = "NewMovie";
    Layout = "~/Views/Shared/_Layout.cshtml";
}


    @if (Model.Movie?.Id != 0)
    {
        <h2>Edit Movie</h2>
    }
    else
    {
        <h2>New Movie</h2>
    }

@using (Html.BeginForm("Save", "Movies"))
{
    <div class="form-group">
        @Html.TextBoxFor(m => m.Movie.Name, new { @class = "form-control", placeholder = @Html.DisplayNameFor(m => m.Movie.Name) })
    </div>
    <div class="form-group">
        @Html.TextBoxFor(m => m.Movie.ReleaseDate, "{0:d MMM yyyy}", new { @class = "form-control", placeholder = @Html.DisplayNameFor(m => m.Movie.ReleaseDate) })
    </div>
    <div class="form-group">
        @Html.DropDownListFor(m => m.Movie.GenreId, new SelectList(Model.Genres, "Id", "Name"), "Select Genre", new { @class = "form-control" })
    </div>
    <div class="form-group">
        @Html.TextBoxFor(m => m.Movie.InStock, new { @class = "form-control", placeholder = @Html.DisplayNameFor(m => m.Movie.InStock) })
    </div>
    @Html.HiddenFor(m => m.Movie.Id)
    <button type="submit" class="btn btn-primary">Save</button>
}